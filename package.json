{
  "name": "phantom-backend",
  "version": "1.0.0",
  "description": "Elevate the public transport experience",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run lint:fix && tsc",
    "start": "node build/src/index.js",
    "dev": "nodemon",
    "test": "mocha --require ts-node/register --recursive test/**/*.spec.ts",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "all": "true",
    "exclude": [
      "build",
      "coverage"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stackup-Rwanda/phantom-backend.git"
  },
  "keywords": [
    "buses",
    "transport",
    "typescript"
  ],
  "author": "ceelogre",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Stackup-Rwanda/phantom-backend/issues"
  },
  "homepage": "https://github.com/Stackup-Rwanda/phantom-backend#readme",
  "dependencies": {
    "@types/i18n-js": "^3.8.4",
    "await-to-js": "^3.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "i18n": "^0.15.1",
    "i18n-js": "^4.2.3",
    "joi": "^17.9.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.21",
    "pg": "^8.10.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.29.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/i18n": "^0.13.6",
    "@types/mocha": "^10.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^16.7.1",
    "@types/sequelize": "^4.28.14",
    "@types/sinon": "^10.0.13",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "assert": "^2.0.0",
    "chai": "^4.3.7",
    "eslint": "^8.35.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1"
  }
}

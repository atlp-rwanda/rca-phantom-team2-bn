{
  "name": "phantom-backend",
  "version": "1.0.0",
  "description": "Elevate the public transport experience",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsc && node build/index.js",
    "dev": "nodemon",
    "test": "nyc mocha",
    "lint": "eslint src"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "src/test/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "all": "true",
    "exclude": [
      "build",
      "coverage"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stackup-Rwanda/phantom-backend.git"
  },
  "keywords": [
    "buses",
    "transport",
    "typescript"
  ],
  "author": "ceelogre",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Stackup-Rwanda/phantom-backend/issues"
  },
  "homepage": "https://github.com/Stackup-Rwanda/phantom-backend#readme",
  "dependencies": {
    "@types/express": "^4.17.17",
    "express": "^4.18.2",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.7.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "assert": "^2.0.0",
    "chai": "^4.3.7",
    "eslint": "^8.35.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1"
  }
}

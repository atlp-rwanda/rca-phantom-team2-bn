{
  "name": "phantom-backend",
  "version": "1.0.0",
  "description": "Elevate the public transport experience",
  "main": "src/index.ts",
  "scripts": {
    "start": "tsc && node dist/index",
    "dev": "tsc && nodemon dist/index",
    "test": "mocha --require ts-node/register --recursive test/**/*.spec.ts",
    "lint": "eslint src",
    "build": "tsc"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.spec.ts",
    "require": "ts-node/register"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "all": "true",
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Stackup-Rwanda/phantom-backend.git"
  },
  "keywords": [
    "buses",
    "transport",
    "typescript"
  ],
  "author": "ceelogre",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Stackup-Rwanda/phantom-backend/issues"
  },
  "homepage": "https://github.com/Stackup-Rwanda/phantom-backend#readme",
  "dependencies": {
    "@types/express": "^4.17.6",
    "express": "^4.17.1",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^8.0.3",
    "@types/node": "^13.13.15",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "assert": "^2.0.0",
    "chai": "^4.3.7",
    "chai-http": "^4.3.0",
    "eslint": "^7.8.1",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "sinon": "^15.0.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^9.0.0"
  }
}
